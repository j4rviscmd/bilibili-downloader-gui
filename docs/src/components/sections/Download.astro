---
/**
 * Download - Download section component with platform cards.
 *
 * Displays download options for Windows, macOS, and Linux platforms.
 * Each platform is shown in a card with an icon, name, and download button.
 * Disabled platforms show a "Coming Soon" message.
 */
import Button from "../ui/Button.astro";
import Card from "../ui/Card.astro";
import { getLangFromUrl, useTranslations } from "../../i18n/ui";

const url = Astro.url;
const lang = getLangFromUrl(url);
const t = useTranslations(lang);

const releaseUrl =
  "https://github.com/j4rviscmd/bilibili-downloader-gui/releases";

const platforms = [
  {
    key: "windows",
    href: releaseUrl,
    disabled: false,
    svg: `<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="h-10 w-10"><path d="M0 3.449L9.75 2.1v9.451H0m10.949-9.602L24 0v11.4H10.949M0 12.6h9.75v9.451L0 20.699M10.949 12.6H24V24l-12.9-1.801"/></svg>`,
  },
  {
    key: "macos",
    href: releaseUrl,
    disabled: false,
    svg: `<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="h-10 w-10"><path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/></svg>`,
  },
  {
    key: "linux",
    href: "#",
    disabled: true,
    svg: `<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="h-10 w-10"><rect width="20" height="14" x="2" y="3" rx="2" ry="2"/><line x1="8" x2="16" y1="21" y2="21"/><line x1="12" x2="12" y1="17" y2="21"/></svg>`,
  },
];
---

<section id="download" class="container mx-auto px-4 py-16">
  <h2 class="text-center text-3xl font-bold">{t("download.title")}</h2>
  <div class="mt-10 flex flex-wrap justify-center gap-6">
    {
      platforms.map((platform) => (
        <Card
          class={`w-48 p-6 text-center ${platform.disabled ? "opacity-60" : ""}`}
        >
          <div
            class="flex justify-center text-muted-foreground"
            set:html={platform.svg}
          />
          <h3 class="mt-4 font-semibold">{t(`download.${platform.key}`)}</h3>
          {platform.disabled ? (
            <p class="mt-4 text-sm text-muted-foreground">
              {t("download.comingSoon")}
            </p>
          ) : (
            <Button
              href={platform.href}
              class="mt-4 w-full"
              size="sm"
              rel="noopener noreferrer"
            >
              {t("download.button")}
            </Button>
          )}
        </Card>
      ))
    }
  </div>
</section>
